<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fon4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lesa_sibirii" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="383dp"
        android:layout_height="135dp"
        android:alpha="0.8"
        android:cropToPadding="false"
        android:scaleType="fitXY"

        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/knopkaser" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="348dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:alpha="0.8"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:srcCompat="@drawable/knopkaser" />

    <ImageButton
        android:id="@+id/dann3"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/fon4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/knopkaser" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:text='Информационно-справочная система "Контроль экологического состояния местности"'
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fon4" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Меню"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/dann3"
        app:layout_constraintEnd_toEndOf="@+id/dann3"
        app:layout_constraintStart_toStartOf="@+id/dann3"
        app:layout_constraintTop_toTopOf="@+id/dann3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="318dp"
        android:layout_height="56dp"
        android:fontFamily="serif"
        android:text="Введите название региона с большой буквы и состояние воздуха, воды и почвы в нём (0 - плохое, 1 - среднее, 2 - хорошее)"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <EditText
        android:id="@+id/nazvReg"
        android:layout_width="346dp"
        android:layout_height="67dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/lightser"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Название региона"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <EditText
        android:id="@+id/sostVozd"
        android:layout_width="346dp"
        android:layout_height="67dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/lightser"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Состояние воздуха"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nazvReg" />

    <EditText
        android:id="@+id/sostVod"
        android:layout_width="346dp"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/lightser"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Состояние воды"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sostVozd" />

    <EditText
        android:id="@+id/sostPoch"
        android:layout_width="346dp"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/lightser"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Состояние почвы"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sostVod" />

    <ImageButton
        android:id="@+id/dann4"
        android:layout_width="218dp"
        android:layout_height="50dp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/dann3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sostPoch"
        app:layout_constraintVertical_bias="0.671"
        app:srcCompat="@drawable/knopkaser" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Подтвердить"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/dann4"
        app:layout_constraintEnd_toEndOf="@+id/dann4"
        app:layout_constraintStart_toStartOf="@+id/dann4"
        app:layout_constraintTop_toTopOf="@+id/dann4" />

    <TextView
        android:id="@+id/osh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/dann4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sostPoch" />

</androidx.constraintlayout.widget.ConstraintLayout>